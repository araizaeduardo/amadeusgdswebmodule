# Configuración de la API de Amadeus
AMADEUS_API_KEY=your_api_key_here
AMADEUS_API_SECRET=your_api_secret_here

# Modo de entorno (development, testing, production)
APP_ENV=development

# Configuración de manejo de errores
# Si está en true, activará el modo de prueba automáticamente para ciertos errores
ENABLE_AUTO_FALLBACK=true

# Si está en true, mostrará mensajes informativos sobre el modo de prueba al usuario
SHOW_FALLBACK_MESSAGES=true

# Lista de códigos de error que activarán el modo de prueba automáticamente
# Separados por comas, ejemplo: 34651,34652,34653
AUTO_FALLBACK_ERROR_CODES=34651

# Configuración de la base de datos
DATABASE_URL=sqlite:///amadeusai.db

# Configuración de email (para enviar confirmaciones)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_TLS=true
EMAIL_FROM=noreply@example.com
